{% extends '::base.html.twig' %}

{% block body -%}
    <h1>AuthUser</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Userident</th>
                <td>{{ entity.userIdent }}</td>
            </tr>
            <tr>
                <th>Domain</th>
                <td>{{ entity.domain }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>Auth_token</th>
                <td>{{ entity.authtoken }}</td>
            </tr>
            <tr>
                <th>Auth_token_created</th>
                <td>{{ entity.authtokencreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ entity.state }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('authuser') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('authuser_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
