{% extends '::base.html.twig' %}

{% block body -%}
    <h1>AuthUser list</h1>

    <table class="records_list" id="sortable_table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Userident</th>
                <th>Domain</th>
                <th>Email</th>
                <th>Password</th>
                <th>Auth_token</th>
                <th>Auth_token_created</th>
                <th>State</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('authuser_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.userIdent }}</td>
                <td>{{ entity.domain }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.authtoken }}</td>
                <td>{% if entity.authtokencreated %}{{ entity.authtokencreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.state }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('authuser_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('authuser_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('authuser_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
